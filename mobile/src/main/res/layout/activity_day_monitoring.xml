<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <ImageView
        android:id="@+id/bgImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/null_description"
        android:scaleType="fitXY"
        android:src="@drawable/bg" />

    <RelativeLayout
        android:id="@+id/actionBarLayout"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/colorBlack"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/applicationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/dwarf_sleepy"
            android:textColor="@color/colorWhite"
            android:textSize="42sp" />

        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/applicationName"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/null_description"
            android:src="@drawable/ic_user" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/heartRateLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/actionBarLayout"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/heartRateImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/null_description"
            android:src="@drawable/heart" />

        <TextView
            android:id="@+id/heartRateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="60sp" />

        <ImageView
            android:id="@+id/caloriesBurntImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="100dp"
            android:contentDescription="@string/null_description"
            android:src="@drawable/calories" />

        <TextView
            android:id="@+id/caloriesBurntTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="60sp" />
    </LinearLayout>
</RelativeLayout>
