<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <ImageView
        android:id="@+id/bgImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/null_description"
        android:scaleType="fitXY"
        android:src="@drawable/bg" />

    <include layout="@layout/actionbar_layout"/>

    <LinearLayout
        android:id="@+id/heartRateLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/actionBarLayout"
        android:layout_marginTop="44dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/heartRateImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/null_description"
            android:src="@drawable/heart" />

        <TextView
            android:id="@+id/heartRateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="44dp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="32sp" />
    </LinearLayout>


    <Button
        android:id="@+id/polarBeltButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/heartRateLinearLayout"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50sp"
        android:background="@color/colorAccent"
        android:text="@string/polar_belt"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/accelerometerButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/polarBeltButton"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40sp"
        android:background="@color/colorBleumarin"
        android:text="@string/accelerometer"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/monitoringLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/accelerometerButton"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dayMonitoringButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="0.5"
            android:background="@color/colorYellow"
            android:text="@string/day_monitoring"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/nightMonitoringButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="0.5"
            android:background="@color/colorBlack"
            android:text="@string/night_monitoring"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp" />

    </LinearLayout>
</RelativeLayout>
